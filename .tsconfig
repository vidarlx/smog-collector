{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "esModuleInterop": true,
        "lib": [
            "es2017"
        ],
        "sourceMap": true,
        "alwaysStrict": true,
        "baseUrl": "./",

        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
